# syntax=docker/dockerfile:1.4  
FROM nginx:alpine
COPY index.html /usr/share/nginx/html/
COPY projects.json /usr/share/nginx/html/
COPY script.js /tmp/script.js
RUN apk add --no-cache gettext && \
    --mount=type=secret,id=api_key \
    if [ -z "$(cat /run/secrets/api_key)" ]; then echo "Error: API_KEY is not set" >> /tmp/env.debug; exit 1; fi && \
    API_KEY=$(cat /run/secrets/api_key) envsubst '${API_KEY}' < /tmp/script.js > /usr/share/nginx/html/script.js && \
    rm /tmp/script.js

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]