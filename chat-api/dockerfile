FROM python:3.10-slim

WORKDIR /app

# Install build-essential to get gcc and other build tools
RUN apt-get update && apt-get install -y build-essential && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# This line seems to be for a library not in requirements, I'll leave it for now
# but it might be worth checking if easyocr is still needed.
RUN python -c "import easyocr; easyocr.Reader(['en'], download_enabled=True)"

COPY app.py .
COPY auth.py . # <-- Added this line
COPY credentials.json /app/credentials.json

EXPOSE 8000

CMD ["gunicorn", "-w", "1", "-k", "uvicorn.workers.UvicornWorker", "--timeout", "120", "app:app", "--bind", "0.0.0.0:8000"]
